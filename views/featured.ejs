<%- include("header.ejs")%>
<script>$('#1').css('background','#85D8CE');$('#1').css('border-radius','10px')</script>
<style>
	body { font-family: sans-serif; }
.title{
		box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
		background: #000033;
		color: white;
		padding: 2px 15px;
		border-radius: 8px;
	}
	
	.results .format,.col-4,.col{
		border-right: 2px solid rgba(224,224,209);
	}
	
	.description,.stadium{
		font-size: 0.9rem;
		font-style: italic;
		font-weight: bold;
	
	}
	.results .col-4,.col{
		padding-left: 20px;
	}
	.date{
		padding-top: 15px;
		font-size: 0.9rem;
		/* font-weight: lighter; */
		color:#b3b3b3;
	}
	.teams,.score{
		font-weight: bold;
		font-size: 1.5rem;
	}
	.score{
		color:#666666;
	}
	.results .col img{
		height:auto;
	}
	
	.results row{
		padding-bottom: 2px solid rgba(224,224,209);
	}
	
	
	
	@media only screen and (max-width: 600px) {
		.title,.description,.stadium,.date,.status,.teams,.score,.btn
        {
			font-size:0.9rem;
		}
		.format{
			margin-bottom:5%;
		}
	}
</style>


<div class="container results">	
	<h2 class="heading text-start mt-5 pb-3">
		Featured
	</h2>
	<div id="match">
	
	</div>
</div>

<script>
	async function getMatch()
	{
		const url = "https://moviebuff.run-ap-south1.goorm.io/matches/api";
		const response = await fetch("https://moviebuff.run-ap-south1.goorm.io/matches/api"); 
        const data = await response.json();
		$('#match').text('');
		data.forEach(function(mat){
			var x;var y="",z="";
			if(mat.type==1)
				x="TEST";
			else if(mat.type==2)
				   x="ODI";
			     else
					 x="T20";
			if(mat.inning.length>0)
				{
					y+=mat.inning[0].currentScore;
					y+='/';
					y+=mat.inning[0].wickets;y+='(';y+=mat.inning[0].overs;y+=')';
				}
			if(mat.inning.length>1)
				{
					z+=mat.inning[1].currentScore;
					z+='/';
					z+=mat.inning[1].wickets;z+='(';z+=mat.inning[1].overs;z+=')';
				}
			$('#match').append("<div class='row my-3'><div class='col-lg-2 d-flex justify-content-center align-items-center format'><span class='title'>"+x+"</span></div><div class='col-lg-4'><div class='description'><span>"+mat.title+"</span></div><div class ='stadium'><span>"+mat.location+"</span></div><div class='date'><span>"+mat.date+"</span></div></div><div class='col-lg'><span class='result'>"+mat.status+"</span><div><img src='"+mat.team1.image+"' style='height:30px;width:35px;'>&nbsp;<span class='teams'>"+mat.team1.name+"</span>&nbsp;<span class='score'>"+y+"</span></div><div class='mt-0'><img src='"+mat.team2.image+"' style='height:30px;width:35px;'>&nbsp;<span class='teams'>"+mat.team2.name+"</span>&nbsp;<span class='score'>"+z+"</span></div></div><div class='col-lg-2 d-flex justify-content-center align-items-center'><a href='/match/"+mat._id+"/commentary'><button type='button' class='btn btn-outline-primary'>Go to Match</button></a></div></div><hr>")
		})
	}
	getMatch();
	setInterval(getMatch,3000);
</script>














