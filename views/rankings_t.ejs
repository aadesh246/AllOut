		  <td><%=bat.rank%></td>
		  <td><%=bat.name%></td>
		  <td><%=bat.country%></td>
		  <td><%=bat.points%></td>
	  </tr>
	  <%})%>
  </tbody>
</table>
	  </div>
      <div class="tab-pane fade" id="list-bowl" role="tabpanel" aria-labelledby="list-bowl-list">  <table class="table">
		  <thead>
    <tr>
      <th scope="col">Rank</th>
      <th scope="col">Player Name</th>
	  <th scope="col">Country</th>
      <th scope="col">Points</th>
    </tr>
  </thead>
  <tbody>
	  <%bowl.forEach(function(bowl){%>
