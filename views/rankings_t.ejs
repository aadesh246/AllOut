      <th scope="col">Player Name</th>
	  <th scope="col">Country</th>
      <th scope="col">Points</th>
    </tr>
  </thead>
  <tbody>
	  <%all.forEach(function(all){%>
	  <tr>
		  <td><%=all.rank%></td>
		  <td><%=all.name%></td>
		  <td><%=all.country%></td>
		  <td><%=all.points%></td>
